<html>
<meta charset = "UTF-8">

<script>

var texto;
var valor;
var tempo;

function pegaNumero(texto){

	return parseFloat(prompt(texto).replace(",",".").replace("dez","10"));
}

function arrumarValor(valor){

	return ("R$"+(valor.toFixed(2)).replace(".",","));
}

function arrumarTempo(tempo){

	return ("Tempo: "+Math.round(tempo)+"min<br>");
}

var distancia = pegaNumero("Digite a dist√¢ncia: ");
var velocidadeMediaTaxi = pegaNumero("Digite a velocidade media do Taxi: ");
var velocidadeMediaCarro = pegaNumero("Digite a velocidade media do Carro: ");
var estacionamento = pegaNumero("Digite o valor do Estacionamento: ");
var valorGas = pegaNumero("Digite o Valor da gasolina: ");
var rendimentoCarro = pegaNumero("Digite o rendimento do Carro: ");
var tarifaTaxi = pegaNumero("Digite o valor da tarifa do Taxi: ");
var tempoCarro = distancia/velocidadeMediaCarro*60;
var precoTaxi = tarifaTaxi * distancia;
var tempoTaxi = distancia/velocidadeMediaTaxi*60;
var precoCarro = (valorGas/rendimentoCarro*distancia)+estacionamento;


document.write("<h3> Carro: </h3><br>");
document.write(arrumarTempo(tempoCarro));
document.write(arrumarValor(precoCarro));


document.write("<h3> Taxi: </h3><br>");
document.write(arrumarTempo(tempoTaxi));
document.write(arrumarValor(precoTaxi));

</script>
</html>
