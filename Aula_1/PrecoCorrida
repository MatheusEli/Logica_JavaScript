<html>
<meta charset = "UTF-8">

<script>


var distancia = parseFloat(prompt("Digite a Distância Percorrida: ").replace(",","."));
var velocidadeMediaTaxi = parseFloat(prompt("Digite a Velocidade Média do Taxi: ").replace(",","."));
var velocidadeMediaCarro = parseFloat(prompt("Digite a Velocidade Média do Carro: ").replace(",","."));
var estacionamento = parseFloat(prompt("Digite o Valor do Estacionamento: ").replace(",","."));
var valorGas =parseFloat(prompt("Digite o Valor da gasolina: ").replace(",","."));
var rendimentoCarro = parseFloat(prompt("Digite o rendimento do carro: ").replace(",","."));
var tarifaTaxi =parseFloat(prompt("Digite o valor da tarifa do Táxi: ").replace(",","."));
var tempoCarro = distancia/velocidadeMediaCarro*60;
var precoTaxi = tarifaTaxi * distancia;
var tempoTaxi = distancia/velocidadeMediaTaxi*60;
var precoCarro = (valorGas/rendimentoCarro*distancia)+estacionamento;


document.write("<h3> Carro: </h3><br>");
document.write("Tempo: "+Math.round(tempoCarro)+"min<br>");
document.write("Preço: R$"+(precoCarro.toFixed(2)).replace(".",","));


document.write("<h3> Taxi: </h3><br>");
document.write("Tempo: "+Math.round(tempoTaxi)+"min<br>");
document.write("Preço: R$"+(precoTaxi.toFixed(2)).replace(".",","));

</script>
</html>
