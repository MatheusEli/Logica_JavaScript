<html>
<meta charset = "UTF-8">

<script>


var distancia = prompt("Digite a Distância Percorrida: ");
var velocidadeMediaTaxi = prompt("Digite a Velocidade Média do Taxi: ");
var velocidadeMediaCarro = prompt("Digite a Velocidade Média do Carro: ");
var estacionamento = parseFloat(prompt("Digite o Valor do Estacionamento: "));
var valorGas =prompt("Digite o Valor da gasolina: ");
var rendimentoCarro = prompt("Digite o rendimento do carro: ");
var tarifaTaxi =prompt("Digite o valor da tarifa do Táxi: ");
var tempoCarro = distancia/velocidadeMediaCarro*60;
var precoTaxi = tarifaTaxi * distancia;
var tempoTaxi = distancia/velocidadeMediaTaxi*60;
var precoCarro = (valorGas/rendimentoCarro*distancia)+estacionamento;


document.write("<h3> Carro: </h3><br>");
document.write("Tempo: "+Math.round(tempoCarro)+"min<br>");
document.write("Preço: R$"+(precoCarro.toFixed(2)).replace(".",","));


document.write("<h3> Taxi: </h3><br>");
document.write("Tempo: "+Math.round(tempoTaxi)+"min<br>");
document.write("Preço: R$"+(precoTaxi.toFixed(2)).replace(".",","));

</script>
</html>
